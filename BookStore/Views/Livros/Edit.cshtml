@model BookStore.Domain.Model.Livro

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Livro</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataLancado" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataLancado" class="form-control" />
                <span asp-validation-for="DataLancado" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumeroPaginas" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NumeroPaginas" class="form-control" />
                <span asp-validation-for="NumeroPaginas" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Corredor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Corredor" class="form-control" />
                <span asp-validation-for="Corredor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Prateleira" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Prateleira" class="form-control" />
                <span asp-validation-for="Prateleira" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar</a>
</div>

